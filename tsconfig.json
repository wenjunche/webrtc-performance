{
  "compilerOptions": {
    "lib": ["dom", "es2018"],
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": ["*.ts", "example.tsx"]
}
